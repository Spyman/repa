.container
  %table.table.table-striped
    %thead
      %tr
        %td Автор
        %td Комментарии
        %td Удалить
      %tbody
        - @comments.each do |comment|
          %tr
            %td
              =comment.username
            %td
              =comment.text
            %td
              =link_to "Remove", comment_path(comment), method: :delete, class: 'btn btn-danger'