.container
  .jumbotron
    %h3 Добавление поста
    = form_for @post, :url => {:action => 'create'}, :class => 'jumbotron' do |f|
      %br
      = f.label :title
      = f.text_field :title, :class => 'form-control'
      %br
      = f.label :text
      = f.text_area :text, :class => 'form-control'
      %br
      = f.submit :class => 'btn btn-success'